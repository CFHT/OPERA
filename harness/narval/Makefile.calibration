					if [ -s $(byproductsdir)$(DETECTOR)$(AMPLIFIER)_$(MODE)$${mods[$$count]}_$(SPEED).rlst ] ;  then \
						echo "$(DETECTOR) $(MODE) $(SPEED) $(AMPLIFIER)_ $${mods[$$count]}" >> $(byproductsdir)master.tmp ;\
