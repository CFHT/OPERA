			else \
				if [ -s $(byproductsdir)$@ ] ; then \
					echo "$(DETECTOR) $(MODE) $(SPEED) $(AMPLIFIER)_" >> $(byproductsdir)master.tmp ;\
					if [[ "$(DEBUG)" == "1" ]] ; then \
